<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3CB371"
    tools:context=".HowToPlayFragment3">

    <fragment
        android:id="@+id/text_how_to_play3"
        android:name="com.example.university.fragment_info3_text"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="264dp"
        tools:layout="@layout/fragment_info3_text"></fragment>

    <fragment
        android:id="@+id/image_how_to_play3"
        android:name="com.example.university.fragment_info3_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="214dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        tools:layout="@layout/fragment_info3_image"></fragment>

    <fragment
        android:id="@+id/button_how_to_play3"
        android:name="com.example.university.fragment_info3_button"
        android:layout_width="288dp"
        android:layout_height="97dp"
        android:layout_below="@+id/text_how_to_play3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="10dp"
        tools:layout="@layout/fragment_info3_button"></fragment>

</RelativeLayout>